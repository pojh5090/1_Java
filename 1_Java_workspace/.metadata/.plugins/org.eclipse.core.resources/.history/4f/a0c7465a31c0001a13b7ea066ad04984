import java.util.Scanner;

public class E_KeyboardInput {
	public void input1() {
		Scanner sc = new Scanner(System.in);
		
//		System.out.print("원하는 값을 입력 하세요 : ");
//		String value = sc.next();  //변수(value)를 만들어 줘야 '입력' 데이터가 저장됨.		
//		System.out.println("내가 입력한 값: " + value);
		
		System.out.print("이름 : ");
